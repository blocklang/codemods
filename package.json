{
  "name": "codemods",
  "version": "0.1.0",
  "description": "Blocklang 客户端代码生成工具",
  "scripts": {
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "build:tsc": "tsc",
    "build:templates": "shx cp -r src/templates dist/src/",
    "build": "npm run build:tsc && npm run build:templates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blocklang/codemods.git"
  },
  "author": "xiaohulu",
  "license": "MIT",
  "keywords": [
    "blocklang",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/blocklang/codemods/issues"
  },
  "homepage": "https://github.com/blocklang/codemods#readme",
  "bin": "dist/src/bin/codemods.js",
  "devDependencies": {
    "@types/node": "10.17.1",
    "husky": "^3.1.0",
    "intern": "^4.6.0",
    "lint-staged": "^9.5.0",
    "shx": "^0.3.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@dojo/framework": "^6.0.3",
    "@types/cross-spawn": "^6.0.1",
    "@types/jsdom": "^12.2.4",
    "@types/prettier": "^1.19.0",
    "@types/yargs": "^13.0.3",
    "@types/lodash": "^4.14.149",
    "cross-spawn": "^7.0.1",
    "jsdom": "^15.2.1",
    "lodash": "^4.17.15",
    "pkg-dir": "^4.2.0",
    "prettier": "^1.19.1",
    "ts-morph": "^5.0.0",
    "yargs": "^15.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
